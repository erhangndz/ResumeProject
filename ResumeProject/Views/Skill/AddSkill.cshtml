
@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Yetenek Ekleme Sayfası</h2>


<form method="post" class="main-input">
    <div class="top-inputs d-grid">

        <label>Yetenek Başlığı</label>
        <input type="text" class="form-control" name="SkillTitle" required="" />
        <br />
        <label>Yetenek İkonu</label>
        <input type="text" class="form-control" name="SkillIcon" required=""/>
        <br />
        <label>Yetenek Açıklaması</label>
        <input type="text" class="form-control" name="SkillDescription" required="" />
        <br />
        <button class="btn btn-primary">Yeteneği Kaydet</button>
    </div>
</form>

