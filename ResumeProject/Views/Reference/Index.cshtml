@model List<ResumeProject.Models.TblReferences>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referans Listesi</h2>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Meslek</th>
        <th>Yorum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.ReferenceID</td>
                    <td>@x.NameSurname</td>
                    <td>@x.Job</td>
                    <td>@x.Comment</td>
                    <td><a href="/Reference/DeleteReference/@x.ReferenceID" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Reference/UpdateReference/@x.ReferenceID" class="btn btn-outline-success">Güncelle</a></td>
                </tr>
            }



</table>
<a href="/Reference/AddReference" class="btn btn-outline-primary">Yeni Referans Girişi</a>

