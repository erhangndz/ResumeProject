@using ResumeProject.Models
@model List<TblContact>
@{
    ViewBag.Title = "GetMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Konuya Göre Mesajlar</h2>



<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var x in Model)
    {
   
        <tr>
            <td>@x.ContactID</td>
            <td>@x.NameSurname</td>
            <td>@x.TblCategory.CategoryName</td>
            <td>@x.Date</td>
            <td><a href="/Contact/DeleteContact/@x.ContactID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Contact/OpenContact/@x.ContactID" class="btn btn-outline-info">Mesajı Aç</a></td>
        </tr>
    }


</table>
