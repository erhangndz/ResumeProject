@model  ResumeProject.Models.TblProfile
@{
    ViewBag.Title = "ProfileDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Profil Detayları</h2>
<form method="get">
    <table class="table table-bordered">
        <tr>
            <th>Profil ID</th>
            <th>Ad Soyad</th>
            <th>Açıklama</th>
            <th>Mail</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>Twitter</th>
            <th>Facebook</th>
            <th>Instagram</th>
            <th>Linkedin</th>
        </tr>
        
        
        <tr>
            <td>@Html.DisplayFor(x => x.ProfileID)</td>
            <td>@Html.DisplayFor(x => x.Name)</td>
            <td>@Html.DisplayFor(x => x.profileDescription)</td>
            <td><a href="mailto:@Html.DisplayTextFor(x=>x.mail)">Mail Gönder</a></td>
            <td>@Html.DisplayFor(x => x.address)</td>
            <td>@Html.DisplayFor(x => x.phone)</td>
            <td><a href="http://@Html.DisplayTextFor(x=>x.socialnetwork1)" target="_blank">Twitter</a></td>
            <td><a href="http://@Html.DisplayTextFor(x=>x.socialnetwork2)" target="_blank">Facebook</a></td>
            <td><a href="http://@Html.DisplayTextFor(x=>x.socialnetwork3)" target="_blank">Instagram</a></td>
            <td><a href="http://@Html.DisplayTextFor(x=>x.socialnetwork4)" target="_blank">Linkedin</a></td>
        </tr>
        

    </table>
</form>