@model ResumeProject.Models.TblContact

@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mesaj Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.ContactID)
    @Html.HiddenFor(x => x.Mail)
    @Html.HiddenFor(x => x.Message)
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Konu</label>
    @Html.TextBoxFor(x=> x.TblCategory.CategoryName, new { @class = "form-control" })    
    <br />
    <label>Tarih</label>
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Verileri Güncelle</button>
</form>

